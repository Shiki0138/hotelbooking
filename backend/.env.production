# LastMinuteStay Production Environment Variables
# Created: 2025-07-04
# IMPORTANT: Replace placeholder values with actual Supabase credentials

# Server Configuration
NODE_ENV=production
PORT=8000

# Supabase Configuration (MUST UPDATE)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database (Optional - Supabase provides connection pooling)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# Rakuten Travel API
RAKUTEN_APPLICATION_ID=1089506543046478259
RAKUTEN_AFFILIATE_ID=your-affiliate-id

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@lastminutestay.com
DOMAIN=lastminutestay.com

# Stripe Payment (if needed)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CORS Configuration
ALLOWED_ORIGINS=https://lastminutestay.vercel.app,https://www.lastminutestay.com

# Monitoring & Alerts
SENTRY_DSN=your-sentry-dsn-if-using
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
API_CACHE_TTL_HOTELS=300
API_CACHE_TTL_PRICES=60
API_CACHE_TTL_AVAILABILITY=30

# Notification Settings
MAX_DAILY_ALERTS_PER_USER=10
PRICE_DROP_THRESHOLD=1000
PRICE_DROP_PERCENTAGE=10
MONITOR_INTERVAL_MINUTES=15

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_PRICE_MONITORING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REALTIME_UPDATES=true

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SALT_ROUNDS=10

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHERMAP_API_KEY=your-openweather-api-key

# Vercel Deployment
VERCEL_URL=https://lastminutestay.vercel.app

# Debug (set to false in production)
DEBUG=false
MOCK_RAKUTEN_API=false
MOCK_EMAIL_SEND=false