# Server Configuration
NODE_ENV=production
PORT=3000

# Database
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@lastminutestay.com

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# API Keys - Hotel Aggregators
AGODA_API_KEY=your_agoda_api_key
AGODA_API_SECRET=your_agoda_api_secret
AGODA_SITE_ID=your_agoda_site_id
AGODA_BASE_URL=https://affiliateapi7643.agoda.com/api/v3

BOOKING_COM_API_KEY=your_booking_com_api_key
BOOKING_COM_AFFILIATE_ID=your_booking_com_affiliate_id
BOOKING_COM_BASE_URL=https://distribution-xml.booking.com/2.0

EXPEDIA_API_KEY=your_expedia_api_key
EXPEDIA_API_SECRET=your_expedia_api_secret
EXPEDIA_PARTNER_ID=your_expedia_partner_id
EXPEDIA_BASE_URL=https://api.expediapartnercentral.com/v3

# Other APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key

# Stripe (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Cache Settings
CACHE_TTL_PRICES=300
CACHE_TTL_HOTELS=3600
CACHE_TTL_SEARCH=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Affiliate Tracking
CLICK_TRACKING_ENABLED=true
CONVERSION_WEBHOOK_URL=your_conversion_webhook_url

# Performance
MAX_CONCURRENT_API_CALLS=10
API_TIMEOUT_MS=30000