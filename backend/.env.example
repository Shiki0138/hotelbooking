# Vercel + Supabase環境変数

# 基本設定
NODE_ENV=production
PORT=8000

# Supabase設定（必須）
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT設定
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# CORS設定（フロントエンドURL）
FRONTEND_URL=https://your-frontend.vercel.app
ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://*.vercel.app

# 楽天トラベルAPI（オプション）
RAKUTEN_APPLICATION_ID=your-rakuten-app-id
RAKUTEN_AFFILIATE_ID=your-rakuten-affiliate-id

# メール設定（オプション - SupabaseのEmail機能も使用可）
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# 外部API（オプション）
OPENWEATHERMAP_API_KEY=your-weather-api-key
UNSPLASH_ACCESS_KEY=your-unsplash-key
EXCHANGE_RATES_API_KEY=your-exchange-rates-key

# レート制限
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ログレベル
LOG_LEVEL=info

# デモモード（本番環境ではfalseに）
DEMO_MODE=false