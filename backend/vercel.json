{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/server.js": {
      "maxDuration": 30
    },
    "cron/watchlist-monitor.cron.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/watchlist-monitor",
      "schedule": "*/15 * * * *"
    }
  ]
}