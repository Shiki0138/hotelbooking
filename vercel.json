{
  "version": 2,
  "buildCommand": "./deploy-react.sh",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo 'Dependencies handled by build script'",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}