# Backend Environment Variables
PORT=5000
NODE_ENV=development
JWT_SECRET=your-jwt-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hotelbooking

# Rakuten Travel API
RAKUTEN_APP_ID=your-rakuten-app-id
RAKUTEN_AFFILIATE_ID=your-rakuten-affiliate-id

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Payment Service (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Frontend Environment Variables (Create .env in frontend folder)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Supabase
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Sentry (Optional)
SENTRY_DSN=your-sentry-dsn