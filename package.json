{
  "name": "lms-hotel-booking-system",
  "version": "1.0.0",
  "description": "LMS Hotel Booking System - AI価格予測とOTA比較",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npx vite",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:frontend": "cd frontend && npx vite preview",
    "start:backend": "cd backend && npm start"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shiki0138/hotelbooking.git"
  },
  "keywords": [
    "hotel",
    "price-monitoring",
    "realtime",
    "rakuten-api",
    "notifications",
    "lastminute",
    "booking"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "@supabase/supabase-js": "^2.38.0",
    "resend": "^3.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "author": "Worker3 - LastMinuteStay Development Team",
  "license": "MIT"
}
